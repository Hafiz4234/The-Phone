<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFBFBF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextCelsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Celsius"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonConvertToFahrenheitFromCelsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert to Fahrenheit" />

        <Button
            android:id="@+id/buttonConvertToKelvinFromCelsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert to Kelvin" />

        <TextView
            android:id="@+id/textViewCelsiusResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Result: " />

        <EditText
            android:id="@+id/editTextFahrenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Enter Fahrenheit"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonConvertToCelsiusFromFahrenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert to Celsius" />

        <Button
            android:id="@+id/buttonConvertToKelvinFromFahrenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert to Kelvin" />

        <TextView
            android:id="@+id/textViewFahrenheitResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Result: " />

        <EditText
            android:id="@+id/editTextKelvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Enter Kelvin"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonConvertToCelsiusFromKelvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert to Celsius" />

        <Button
            android:id="@+id/buttonConvertToFahrenheitFromKelvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert to Fahrenheit" />

        <TextView
            android:id="@+id/textViewKelvinResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Result: " />
    </LinearLayout>
</ScrollView>
